---
const {title, description, imageSrc} = Astro.props;
---

<article class="icon">
  <div class="icon_container">
      <img src=`${imageSrc}` alt=`Image og ${title}` />
      <div>
    <h3>{title}</h3>
    <slot />
    </div>
  </div>
</article>

<style>
    .icon_container {
        display: flex;
        gap: 20px;
        margin: 80px 10% 0% 10%;
    }

    .icon_container:nth-child(1) {
        align-items: center;
    }
</style>