 <h2 class="formh1a">Bliv Frivillig</h2>
<div id="formbody">
<form action="#" method="post" enctype="multipart/form-data">
            <label for="fornavn">FOR - OG MELLEMNAVN</label>
            <input type="text" id="fornavn" name="fornavn" required>

            <label for="efternavn">EFTERNAVN</label>
            <input type="text" id="efternavn" name="efternavn" required>

            <label for="fødselsdag">FØDSELSDAG DATO</label>
            <input type="date" id="fødselsdag" name="fødselsdag" required>

            <label for="adresse">ADRESSE</label>
            <input type="text" id="adresse" name="adresse" required>

            <label for="fil">TILFØJ FIL...</label>
            <input type="file" id="fil" name="fil">

            <label for="øvrige">ØVRIGE</label>
            <textarea id="øvrige" name="øvrige" rows="4"></textarea>

            <button type="submit">SEND</button>
        </form>
</div>


